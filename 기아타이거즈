    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav a');
            const navBar = document.querySelector('.nav');

            // IDë¥¼ ê°€ì§„ ëª¨ë“  ìš°ìŠ¹ ì—°ë„ í•­ëª© ê°€ì ¸ì˜¤ê¸°
            const championshipYears = document.querySelectorAll('.history-list li.championship-year[id]');

            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    const id = entry.target.getAttribute('id');
                    const currentLink = document.querySelector(`.nav a[href="#${id}"]`);

                    // ì„¹ì…˜ì´ ë·°í¬íŠ¸ ìƒë‹¨ì— ì§„ì…í•˜ë©´ í™œì„±í™”
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            if (link.getAttribute('href') !== '#') {
                                link.classList.remove('active');
                            }
                        });
                        if (currentLink) {
                            currentLink.classList.add('active');
                        }
                    }
                });
            }, { 
                // ë„¤ë¹„ê²Œì´ì…˜ ë°” ë†’ì´ë§Œí¼ ì¡°ì •í•˜ì—¬ ì •í™•í•œ ìœ„ì¹˜ì—ì„œ í™œì„±í™”
                rootMargin: `-${navBar.offsetHeight}px 0px -70% 0px` 
            });

            sections.forEach(section => {
                observer.observe(section);
            });
            
            // ì•µì»¤ ì´ë™ ì‹œ ë¶€ë“œëŸ¬ìš´ ìŠ¤í¬ë¡¤ ì ìš© ë° ë„¤ë¹„ê²Œì´ì…˜ ë†’ì´ ê³ ë ¤
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    const href = this.getAttribute('href');
                    if (href.startsWith('#') && href.length > 1) {
                        e.preventDefault();
                        const targetId = href.substring(1);
                        const targetElement = document.getElementById(targetId);
                        if (targetElement) {
                            const navHeight = navBar.offsetHeight;
                            const elementPosition = targetElement.getBoundingClientRect().top;
                            const offsetPosition = elementPosition + window.pageYOffset - navHeight;

                            window.scrollTo({
                                top: offsetPosition,
                                behavior: 'smooth'
                            });
                        }
                    } else if (href === '#') {
                        // ë¡œê³  í´ë¦­ ì‹œ ìµœìƒë‹¨ìœ¼ë¡œ ì´ë™
                        e.preventDefault();
                            window.scrollTo({
                                top: 0,
                                behavior: 'smooth'
                            });
                    }
                });
            });
            
             // Hero CTA ë²„íŠ¼ í´ë¦­ ì‹œ ë¶€ë“œëŸ¬ìš´ ìŠ¤í¬ë¡¤ ì ìš©
            document.querySelector('.hero-cta-button').addEventListener('click', function(e) {
                e.preventDefault();
                const targetId = this.getAttribute('href').substring(1);
                const targetElement = document.getElementById(targetId);
                   if (targetElement) {
                        const navHeight = navBar.offsetHeight;
                        const elementPosition = targetElement.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + window.pageYOffset - navHeight;
                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });
                    }
            });

            // ìš°ìŠ¹ ì—°ëŒ€ê¸° ë°”ë¡œê°€ê¸° ë§í¬ì— ë¶€ë“œëŸ¬ìš´ ìŠ¤í¬ë¡¤ ì ìš©
            document.querySelectorAll('.championship-links a').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href').substring(1);
                    const targetElement = document.getElementById(targetId);
                    if (targetElement) {
                        const navHeight = navBar.offsetHeight;
                        // Timeline ìš”ì†Œê°€ ì¹´ë“œ ì•ˆì— ìˆìœ¼ë¯€ë¡œ, ì¹´ë“œì˜ ìœ„ì¹˜ë¥¼ ê³ ë ¤í•´ì•¼ í•¨
                        const cardTop = document.getElementById('history').offsetTop;
                        
                        // ì •í™•í•œ timeline í•­ëª© ìœ„ì¹˜ ê³„ì‚°
                        const elementPosition = targetElement.offsetTop;
                        
                        // Timeline í•­ëª©ì´ í¬í•¨ëœ 'history' ì„¹ì…˜ì˜ ìƒë‹¨ ìœ„ì¹˜ì—ì„œ Nav ë†’ì´ë§Œí¼ ë¹¼ì„œ ìŠ¤í¬ë¡¤ ìœ„ì¹˜ ì¡°ì •
                        const offsetPosition = cardTop + elementPosition + window.pageYOffset - navHeight - 30; // 30pxëŠ” ì—¬ìœ  ê³µê°„

                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });
                    }
                });
            });


        });
    </script>
